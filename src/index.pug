doctype html
head
  script(src='../bower_components/angular/angular.min.js')
  script(src='./js/main.js')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css', rel='stylesheet')
  link(href='./css/main.css', rel='stylesheet')
  meta(name='viewport' content='width=device-width, initial-scale=1')
body
  .container
    header
    .screen
    .keypad
      .keypad-row
        button#key-clear.buttons.largebuttons AC
      .keypad-row
        button#key-7.buttons 7
        button#key-8.buttons 8
        button#key-9.buttons 9
        button#key-divide.buttons /
      .keypad-row
        button#key-6.buttons 6
        button#key-5.buttons 5
        button#key-4.buttons 4
        button#key-minus.buttons -
      .keypad-row
        button#key-3.buttons 3
        button#key-2.buttons 2
        button#key-1.buttons 1
        button#key-plus.buttons +
      .keypad-row
        button#key-0.buttons.largebuttons 0
        button#key-decimal.buttons .
        button#key-equal.buttons =
